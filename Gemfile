source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Use puma as replacement for rack
gem 'puma'

# Use slim as the templating engine instead of erb
gem 'slim-rails'

# If you need to store persistence of background jobs, redis is a fine choice
gem 'redis'

# For now sqlite3 is fine, but I would use pg when you move this to production
# gem 'pg'
# Use sqlite3 as the database for Active Record
gem 'sqlite3'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# You can use coffescript if you want, but I wouldn't at first, makes things simpler
# gem 'coffee-rails', '~> 4.0.0'

# If you ever consider using ember.js or something similar this would be of value
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'
gem 'jquery-ui-rails'

# Use Bootstrap in the rails asset pipeline
gem 'sass-twitter-bootstrap-rails'

# Use twitter-typeahead for schnazzy autocomplete
gem 'twitter-typeahead-rails'

# Use simple form to aid the creation of submission forms
gem 'simple_form'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development do
  # Use capistrano to aid deployment
  gem 'capistrano'
  # Use better_errors to give more understandable errors
  gem 'better_errors'
  # Rspec for writing better tests
  gem 'rspec'
  # Replace standard fixtures with factory_girl
  gem 'factory_girl_rails'
  
  gem 'debugger'
  # Screams at you when you do something dumb
  gem 'rails_best_practices'
  gem 'bullet'
  gem 'flay'
  # Monitors filesystem changes
  gem 'guard'
end

